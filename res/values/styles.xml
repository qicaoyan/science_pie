<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>
	
        <style name="progress">
        <item name="android:indeterminateDrawable">@drawable/progress_medium_white</item>
        <item name="android:minWidth">16dip</item>
        <item name="android:maxWidth">16dip</item>
        <item name="android:minHeight">16dip</item>
        <item name="android:maxHeight">16dip</item>
    </style>
    
        
        
     <style name = "register_edittext_style"> 
         <item name = "android:background">@drawable/register_input_box</item>
     </style>
     
     <!-- 表示姓名或者单位/学校的样式   垂直居中，并且距离左边界10dip-->
     <style name = "release_edittext_style1">
         <item name = "android:background">@drawable/release_common_box</item>
         <item name = "android:textSize">15sp</item>
         <item name = "android:textColorHint">@color/text_light_gray</item>
         <item name = "android:paddingLeft">10dip</item>
         <item name = "android:textColor">@color/text_dark_gray</item>
     </style>
     

     
     
         
      <!-- 表示历往资历  大的编辑框-->
    <style name = "release_edittext_style2">
         <item name = "android:background">@null</item>
         <item name = "android:textSize">15sp</item>
         <item name = "android:textColorHint">@color/text_light_gray</item>
         <item name = "android:paddingLeft">20dip</item>
         <item name = "android:paddingTop">20dip</item>
         <item name = "android:gravity">left|top</item>
         <item name = "android:textColor">@color/text_dark_gray</item>
     </style>
     
    
    
    <!-- 居中类型的编辑框 -->
   <style name = "release_edittext_style3">
         <item name = "android:background">@null</item>
         <item name = "android:textSize">15sp</item>
         <item name = "android:textColorHint">@color/text_light_gray</item>
         <item name = "android:gravity">center</item>
         <item name = "android:textColor">@color/text_dark_gray</item>
     </style>
    
    
    
     <!-- 表示身份、职务、地域的选择框   -->
     <style name="release_select_style1">
         <item name="android:background">@drawable/release_common_box</item>
     </style>
      <!-- 表示人数 -->
     <style name="release_select_style2">
         <item name="android:background">@drawable/release_common_box</item>
         <item name="android:paddingLeft">2dip</item>
          <item name="android:gravity">center_vertical</item>
     </style>
     
     <!-- 表示名称、类型、型号等-->
     <style name="release_select_style3">
     <item name="android:background">@drawable/release_common_box</item>
         <item name="android:paddingLeft">2dip</item>
         <item name="android:gravity">center_vertical</item>
     </style>
     
     <!-- 表示选择框或者输入框中的提示信息的字体 -->
     <style name = "release_text_style1">
         
         <item name = "android:textColor">@color/text_light_gray</item>
          <item name = "android:textSize">15sp</item>
     </style>
     
     
    <!-- 表示人数 -->
     <style name = "release_text_style2">
         
         <item name = "android:textColor">@color/text_light_gray</item>
          <item name = "android:textSize">10sp</item>
     </style>
     
     <style name = "release_check_style1">
         <item name = "android:background">@drawable/shape_check_box</item>
     </style>
     
</resources>
