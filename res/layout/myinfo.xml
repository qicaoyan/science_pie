<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
    android:background="@color/settingbg"
    >
    <include 
        layout="@layout/settingheader"
        />
    <ImageButton 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/shezhitouxiang"
        android:background="@color/settingbg"
        android:scaleType="fitCenter"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="30dip"
        />
	<LinearLayout 
	    android:layout_height="0dip"
	    android:layout_width="match_parent"
	    android:orientation="vertical"
	    android:background="@color/settingbg"
	    android:layout_weight="4"
	    android:layout_margin="20dip"
	    >
	    <LinearLayout 
	        android:layout_width="match_parent"
	        android:layout_height="0dip"
	        android:layout_weight="1"
	        android:orientation="horizontal"
	        >
	        <ImageButton 
	            android:layout_width="wrap_content"
	            android:layout_height="50dip"
	            android:src="@drawable/nicheng"
	            android:background="@color/white"
	            android:scaleType="fitCenter"
	            />
	        <EditText 
	            android:layout_width="wrap_content"
	            android:layout_height="50dip"
	            android:layout_weight="1"
	            android:background="@color/white"
	            android:gravity="center"
	            />
	    </LinearLayout>
   	    <LinearLayout 
	        android:layout_width="match_parent"
	        android:layout_height="0dip"
	        android:layout_weight="1"
	        android:orientation="horizontal"
	        >
	        <ImageButton 
	            android:layout_width="wrap_content"
	            android:layout_height="50dip"
	            android:src="@drawable/shenfen"
	            android:background="@color/white"
	            android:scaleType="fitCenter"
	            />
	        <Spinner 
	            android:layout_width="wrap_content"
	            android:layout_height="50dip"
	            android:layout_weight="1"
	            android:id="@+id/myinfoshenfen"
	            android:background="@drawable/spinner_white"
	            android:gravity="center"
	            />
	    </LinearLayout>
   	    <LinearLayout 
	        android:layout_width="match_parent"
	        android:layout_height="0dip"
	        android:layout_weight="1"
	        android:orientation="horizontal"
	        >
	        <ImageButton 
	            android:layout_width="wrap_content"
	            android:layout_height="50dip"
	            android:src="@drawable/danwei"
	            android:background="@color/white"
	            android:scaleType="fitCenter"
	            />
	        <EditText 
	            android:layout_width="wrap_content"
	            android:layout_height="50dip"
	            android:layout_weight="1"
	            android:background="@color/white"
	            android:gravity="center"
	            />
	    </LinearLayout>
   	    <LinearLayout 
	        android:layout_width="match_parent"
	        android:layout_height="0dip"
	        android:layout_weight="1"
	        android:orientation="horizontal"
	        >
	        <ImageButton 
	            android:layout_width="wrap_content"
	            android:layout_height="50dip"
	            android:src="@drawable/diyu"
	            android:background="@color/white"
	            android:scaleType="fitCenter"
	            />
	        <Spinner 
	            android:layout_width="wrap_content"
	            android:layout_height="50dip"
	            android:layout_weight="1"
	            android:id="@+id/myinfordiyu"
	            android:background="@color/white"
	            android:gravity="center"
	            />
	    </LinearLayout>
   	    <LinearLayout 
	        android:layout_width="match_parent"
	        android:layout_height="0dip"
	        android:layout_weight="1"
	        android:orientation="horizontal"
	        >
	        <ImageButton 
	            android:layout_width="wrap_content"
	            android:layout_height="50dip"
	            android:src="@drawable/youxiang"
	            android:background="@color/white"
	            android:scaleType="fitCenter"
	            />
	        <EditText 
	            android:layout_width="wrap_content"
	            android:layout_height="50dip"
	            android:layout_weight="1"
	            android:background="@color/white"
	            android:gravity="center"
	            />
	    </LinearLayout>
	</LinearLayout>
	<LinearLayout 
	    android:layout_height="0dip"
	    android:layout_width="match_parent"
	    android:orientation="horizontal"
	    android:background="@color/settingbg"
	    android:layout_weight="1"
	    android:gravity="center_horizontal"
	    >
	    <ImageButton 
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:background="@color/settingbg"
	        android:src="@drawable/baocun"
	        />
	</LinearLayout>
</LinearLayout>
