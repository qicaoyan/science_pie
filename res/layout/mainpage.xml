	            >
			    <LinearLayout 
			        android:layout_width="fill_parent"
			        android:layout_height="wrap_content"
			        android:orientation="horizontal"
			        android:layout_margin="0dip"
			        android:background="#00ff00"
			        >
			        
   					<ImageView 
					    android:layout_width="fill_parent"
					    android:layout_weight="1"
